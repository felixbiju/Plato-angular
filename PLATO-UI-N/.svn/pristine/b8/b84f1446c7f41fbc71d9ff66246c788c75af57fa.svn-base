.top_bar mat-form-field {
    margin: 0 4px !important;
}

.example-full-width {
    width: 100%;
}

.leftAlign {
    text-align: left;
}

.buttonstyle {
    text-align: center;
    font-size: 12px;
}

#project_column {
    margin: 1% auto;
    width: 100%;
}

.plato_table td {
    padding: 4px;
    font-size: 12px !important;
}
.plato_table th {
    padding: 4px;
    font-size: 14px !important;
}

.modal-lg .mat-form-field {
    display: inline-block;
    position: relative;
    text-align: left;
    width: 100%;
}

.modal-lg .mat-selection-list .mat-list-option {
    display: block;
    border: 1px solid #ccc;
    border-left: none;
    border-right: none;
    margin-bottom: 1px;
}

ul.list-unstyled {
    border: 1px solid #ccc;
    margin-top: 1px;
    border-left: 0;
    border-right: 0;
    margin-bottom: 5px;
    background-color: transparent !important;
    padding-left: 0 !important;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: inline-flex;
    width: 98%;
}

ul.list-unstyled li {
    padding: 5px;
    margin: 0px auto;
}

.allocationBtn1 {
    float: right;
    margin: 1%;
    background-color: #3a68b7;
    color: white;
    width: 100%;
}

