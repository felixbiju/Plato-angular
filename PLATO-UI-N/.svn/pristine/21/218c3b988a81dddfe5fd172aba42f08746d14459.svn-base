.sidenav-container {
    background: #ffffff;
    padding-bottom: 2em;
    min-height: calc(100% - 2rem);
}

.sidenav-content {
    margin-right: 5px;
    overflow-y: auto;
    overflow-x: none;
    height: 100vh !important;
    padding-bottom: 120px;
    box-shadow: inset 97px 18px 11px -98px rgba(0, 0, 0, 0.5);
}

#sidenav {
    width: 256px;
    box-shadow: none;
}

.row {
    margin: 0;
}

#project_title {
    color: #c90026;
    width: 100%;
    background-color: transparent;
    border-top: 1px solid #c90026;
    border-bottom: 1px solid #c90026;
}

#myList {
    color: #1094d5;
    /* margin-right: 15px; */
    font-size: 22px;
    vertical-align: middle;
}

#myList .mat-icon {
    color: #1094d5;
    margin-right: 15px;
    font-size: 22px;
    vertical-align: middle;
}

.comp-list {
    padding-top: 2px;
    padding-bottom: 0%;
    width: 100%;
    text-align: left;
    color: #272727;
    margin-bottom: 1px;
    font-size: 12px;
    border-bottom: 1px solid #b5b3b3;
    font-family: "Lato", Verdana, sans-serif, Arial !important;
    height: 40px;
}

.comp-list:hover {
  background-color: #efefef !important;
  color: rgba(0,0,0,.87);
}

/deep/ .mat-nav-list .mat-list-item .mat-list-item-content {
    height: 40px !important;
    padding: 0 !important;
}

/deep/ .mat-list,
.mat-nav-list,
.mat-selection-list {
    padding-top: 0px !important;
}

.active {
  background-color: #d0d0d0 !important;
  color: rgba(0,0,0,.87);
}

::ng-deep .mat-checkbox-checked.mat-accent .mat-checkbox-background, .mat-checkbox-indeterminate.mat-accent .mat-checkbox-background {
  background-color: rgb(27, 142, 241) !important;
}

::ng-deep .mat-ripple-element {
  background: rgba(192, 192, 192, 0.4) !important;
}

::ng-deep .mat-radio-button.mat-accent .mat-radio-inner-circle {
  background-color: rgb(27, 142, 241);
}

::ng-deep .mat-radio-button.mat-accent .mat-radio-ripple .mat-ripple-element {
  background-color:rgba(192, 192, 192, 0.4) !important;
}


::ng-deep .mat-radio-button.mat-accent .mat-radio-ripple .mat-ripple-element {
  background-color:rgba(27, 142, 241, .4) !important;
}

::ng-deep .config-card mat-card-title {
  font-weight: 600;
  color: #555555;
}

::ng-deep .plato_table {
  margin-top: 0px !important;
}
