.login-wrap {
  max-width: 100%;
  height: 100%;
  padding-top: 100px;
  margin-bottom: 0;
  background-image: url("../../assets/images/login_bg.jpg");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.login-html {
    width: 340px;
    height: 370px;
    margin: 0 auto;
    padding: 10px;
    position: relative;
    background: white;
    border-radius: 4px;
    box-shadow: 0px 0px 15px 3px rgba(0,0,0,0.2);
    transition: 0.3s;
}

.login-icon {
  border-right: 2px solid #457dc3;
}

.login-icon span{
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.login-icon{
  margin: 10px auto;
  height: 40px;
	display: block;
}

.login-form{
    padding-right: 30px;
    padding: 10px 35px;
    color: black !important;
}

.mat-input-container{
    width: 100%;
    margin: 10px 0px;
}


#login_button {
    margin-top: 15px;
    float: right !important;
    padding: 0 30px;
    font-size: 14px;
    font-family:  "Roboto medium", sans-serif;
    font-weight: bold;
    color: white;
    text-transform: uppercase;
    letter-spacing: 1px;
    background-color: #3a68b7 !important;
    border-radius: 2px;
    width: 100%;
}

.forgetPassword {
    float: right;
    clear: both;
    font-size: 12px;
    cursor: pointer;
    margin-top: 25px;
    color: #3a68b7;
}

.login-form-group /deep/ .mat-input-placeholder-wrapper label {
    font-size: 12px;
    padding: 8px 15px;
    color: rgba(256, 256, 256, .3) !important;
}

.login-form-group input:-webkit-autofill,
input:focus,
input:-webkit-autofill:focus,
input {
    border: none;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 12px;
    opacity: 0.7;
    -webkit-box-shadow: inset 0 0 0px 9999px white;
    color: #000 !important;
}

.modal-content .input-full-width {
    width: 100%;
}

::ng-deep .mat-focused .mat-form-field-label {
  /*change color of label*/
  color: #3a68b7 !important;
 }

 ::ng-deep.mat-form-field-underline {
  /*change color of underline*/
  background-color: #3a68b7 !important;
}

::ng-deep.mat-form-field-ripple {
 /*change color of underline when focused*/
 background-color: #3a68b7 !important;;
}
